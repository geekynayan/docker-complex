{
    "AWSEBDockerrunVersion" : 2,
    "containerDefinitions" : [
        {
            "name" : "client",
            "image" : "geekynayan/multi-client",
            "hostname" : "client",
            "essential" : false
        },
        {
            "name" : "server",
            "image" : "geekynayan/multi-server",
            "hostname" : "api",
            "essential" : false
        },
        {
            "name" : "worker",
            "image" : "geekynayan/multi-worker",
            "hostname" : "worker",
            "essential" : false
        },
        {
            "name" : "nginx",
            "image" : "geekynayan/multi-nginx",
            "hostname" : "nginx",
            "essential" : false,
            "portMappings" : [
                { 
                    "hostPort" : 80,
                    "containerPort" : 80
                }
            ],
            "links" : ["client", "server"]
        }
    ]

}
